<div class="fixed-bottom d-flex justify-content-around mb-5">
  <div
    class="toast align-items-center text-white bg-primary border-0 bg-success"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
    id="EpicToast"
  >
    <div class="d-flex">
      <div class="toast-body"><%= session.successMessage %></div>
      <% session.successMessage = undefined %>
      <button
        type="button"
        class="btn-close btn-close-white me-2 m-auto"
        data-bs-dismiss="toast"
        aria-label="Close"
      ></button>
    </div>
  </div>
</div>

<script>
  var option = {
    animation: true,
    delay: 2000,
  };

  function Toasty() {
    var toastHTMLElement = document.getElementById("EpicToast");

    var toastElement = new bootstrap.Toast(toastHTMLElement, option);

    toastElement.show();
  }
  window.onload = function () {
    Toasty();
  };
</script>
