<!DOCTYPE html>
<html lang="pl">
  <head>
    <%- include('../views/head'); %>
  </head>
  <body class="addStar">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
      <a class="navbar-brand" href="/">Strona główna</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/constelation">Konstelacje</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/star">Gwiazdy</a>
          </li>
        </ul>
      </div>
    </nav>
    <section class="wrapper">
      <h1>Dodaj konstelacje</h1>
      <form action="/constelation/add" method="POST">
        <label><%= data.constelation.labels()['name'] %></label>
        <input
          type="text"
          name="name"
          placeholder="<%= data.constelation.labels()['name'] %>"
          value="<%= data.constelation.name %>"
        />
        <br />

        <label><%= data.constelation.labels()['description'] %></label>
        <textarea
          placeholder="<%= data.constelation.labels()['description'] %>"
          name="description"
        >
<%= data.constelation.description %></textarea
        ><br />

        <label><%= data.constelation.labels()['cloud_level'] %></label>
        <input
          type="number"
          min="0"
          max="10"
          name="cloud_level"
          placeholder="<%= data.constelation.labels()['cloud_level'] %>"
          value="<%= data.constelation.cloud_level %>"
        />
        <br />
        <% if (locals.error) { %> <% if (error['cloud_level']) { %>
        <p class="error-message"><%= error['cloud_level'][0] %></p>
        <% } %> <% } %>

        <label><%= data.constelation.labels()['phase_of_moon'] %> </label>
        <select
          required
          class="form-select form-select-sm"
          aria-label=".form-select-sm example"
          name="phase_of_moon"
        >
          <option value="1">Pełnia</option>
          <option value="2">Nów</option>
          <option value="3">Księżyc w pierwszej kwadrze</option>
          <option value="4">Księżyc w ostatniej kwadrze</option>
        </select>

        <label
          ><%= data.constelation.labels()['type_of_precipitation'] %>
        </label>
        <select
          required
          class="form-select form-select-sm"
          aria-label=".form-select-sm example"
          name="type_of_precipitation"
        >
          <option value="1">Deszcz</option>
          <option value="2">Śnieg</option>
          <option value="3">Grad</option>
          <option value="4">Rosa</option>
        </select>

        <label><%= data.constelation.labels()['fog_density'] %></label>
        <input
          type="number"
          min="0"
          max="10"
          name="fog_density"
          value="<%= data.constelation.fog_density %>"
        />
        <br />
        <% if (locals.error) { %> <% if (error['fog_density']) { %>
        <p class="error-message"><%= error['fog_density'][0] %></p>
        <% } %> <% } %>

        <label>Przypisz konstelacje do gwiazd </label>
        <select
          class="form-select form-select-sm"
          aria-label=".form-select-sm example"
          multiple="multiple"
          name="stars"
        >
          <% data.stars.forEach((star) => { %>
          <option value="<%= star.id %>"><%= star.name %></option>
          <% }) %>
        </select>
        <a href="/star">Edytuj gwiazdy</a><br />
        <a href="/star/add">Dodaj gwiazdę</a><br />
        <input type="submit" value="Dodaj" />
      </form>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
