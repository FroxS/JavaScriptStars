<!DOCTYPE html>
<html lang="pl">
  <head>
    <%- include('../views/head'); %>
  </head>

  <body class="star-list">
    <%- include('../views/nav'); %>
    <section class="table table-hover star-table">
      <h1>Lista Konstelacji</h1>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Nazwa Konstelacji</th>
              <th>Opis Konstelacji</th>
              <th>Zachmurzenie</th>
              <th>Faza księżyca</th>
              <th>Rodzaj opadów</th>
              <th>Mgła</th>
              <th>Edytuj</th>
              <th>Usuń</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((constelation) => { %>
            <tr>
              <td><%= constelation.name %></td>
              <td><%= constelation.description %></td>
              <td><%= locals.monDescription[1] %></td>
              <td><%= locals.monDescription[2] %></td>
              <td><%= locals.monDescription[3] %></td>
              <td><%= locals.monDescription[4] %></td>
              <td>
                <a href="/constelation/edit/?id=<%= constelation.id %>"
                  ><button class="edit" hr>Edytuj</button>
                </a>
              </td>
              <td>
                <form action="/constelation/remove" method="POST">
                  <input
                    type="hidden"
                    name="id"
                    value="<%= constelation.id %>"
                  />
                  <input type="submit" class="remove" value="Usuń" />
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="add-buton">
        <p><a href="/constelation/add">+</a></p>
      </div>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
